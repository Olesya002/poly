P = [1, 1+2i, 0 ,-1-3i, 0, 7];
P1 = [1+2i, 0 ,-1-3i, 0, 7];
x0 = -2-1i;
f1 = 1;
for a = P1
    f1 = f1 * x0;
    f1 = f1 + a;
end
disp(f1);
F1 = polyder(P);
f2 = F1(1);
F1(1)=[];
for a = F1
    f2 = f2 * x0;
    f2 = f2 + a;
end
disp(f2);

